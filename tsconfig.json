{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"target": "es2020",
		"module": "es2022",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"types": [
				"./types/internal"
			],
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			]
		},
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"types": ["vitest/globals", "@testing-library/jest-dom"]
	},
	"include": [
		"scripts/**/*",
		"src/**/*",
		"test/**/*",
		"types/**/*"
	]
}
