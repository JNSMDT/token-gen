{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"target": "es2020",
		"module": "es2022",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"types": ["./types/internal"],
			"$lib":["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$components": ["src/components"],
			"$components/*": ["src/components/*"],
			"$assets": ["src/assets"],
			"$assets/*": ["src/assets/*"]
		},
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["scripts/**/*", "src/**/*", "types/**/*"]
}
